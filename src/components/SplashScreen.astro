---
// Splash screen with auto-redirect after 2 seconds
---

<div id="splash" class="fixed inset-0 z-50 flex flex-col items-center justify-center bg-white">
  <div class="flex flex-col items-center gap-6 animate-fade-in">
    <!-- Logo placeholder - replace with actual logo -->
    <div class="w-24 h-24 rounded-full bg-gray-900 flex items-center justify-center">
      <span class="text-white text-3xl font-bold">B</span>
    </div>

    <!-- Brand name -->
    <h1 class="text-4xl font-bold tracking-wider text-gray-900">
      BUWARA
    </h1>
  </div>
</div>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.6s ease-out;
  }

  @keyframes fade-out {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }

  .animate-fade-out {
    animation: fade-out 0.4s ease-out forwards;
  }
</style>

<script>
  // Auto-hide splash screen after 2 seconds
  const splash = document.getElementById('splash');

  setTimeout(() => {
    if (splash) {
      splash.classList.add('animate-fade-out');
      setTimeout(() => {
        splash.style.display = 'none';
      }, 400);
    }
  }, 2000);

  // Allow tap to skip
  splash?.addEventListener('click', () => {
    splash.classList.add('animate-fade-out');
    setTimeout(() => {
      splash.style.display = 'none';
    }, 400);
  });
</script>

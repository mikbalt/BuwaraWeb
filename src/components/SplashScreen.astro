---
// Splash screen with auto-redirect after 2 seconds
---

<div id="splash" class="splash-screen">
  <div class="splash-content">
    <!-- Logo -->
    <div class="logo-container">
      <img
        src="/images/logo/buwara logo black.png"
        alt="Buwara"
        class="splash-logo"
      />
    </div>

    <!-- Tagline -->
    <p class="tagline">Buwara</p>
    <p class="subtitle">we are all wanderers</p>
  </div>
</div>

<style>
  .splash-screen {
    position: fixed;
    inset: 0;
    z-index: 50;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: var(--color-background);
  }

  .splash-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    animation: fade-in 0.8s ease-out;
  }

  .logo-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .splash-logo {
    height: 4rem;
    width: auto;
    filter: drop-shadow(0 4px 16px rgba(61, 79, 83, 0.1));
  }

  .tagline {
    font-family: 'Forta', sans-serif;
    font-size: 1.5rem;
    color: var(--color-primary);
    letter-spacing: 0.05em;
    margin-top: 0.5rem;
  }

  .subtitle {
    font-size: 0.875rem;
    font-style: italic;
    color: var(--color-slate);
    letter-spacing: 0.1em;
    margin-top: 0.25rem;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-out {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }

  .animate-fade-out {
    animation: fade-out 0.4s ease-out forwards;
  }
</style>

<script>
  // Auto-hide splash screen after 2 seconds
  const splash = document.getElementById('splash');

  setTimeout(() => {
    if (splash) {
      splash.classList.add('animate-fade-out');
      setTimeout(() => {
        splash.style.display = 'none';
      }, 400);
    }
  }, 2000);

  // Allow tap to skip
  splash?.addEventListener('click', () => {
    splash.classList.add('animate-fade-out');
    setTimeout(() => {
      splash.style.display = 'none';
    }, 400);
  });
</script>

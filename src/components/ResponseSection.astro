---
// Response/Comment section component
---

<section class="response-section">
  <div class="container-narrow">
    <h2 class="response-title">Your Response</h2>

    <form class="response-form" id="responseForm">
      <input
        type="text"
        id="name"
        name="name"
        class="form-input"
        required
        placeholder="Your name"
      />

      <textarea
        id="response"
        name="response"
        class="form-textarea"
        rows="1"
        required
        placeholder="Write your thoughts..."
      ></textarea>

      <button type="submit" class="form-submit">
        Submit
      </button>
    </form>

    <!-- Responses will be displayed here -->
    <div class="responses-list" id="responsesList">
      <!-- This can be populated with existing responses from a backend -->
    </div>
  </div>
</section>

<style>
  .response-section {
    padding: 2rem 0;
    border-top: 1px solid var(--color-warm);
  }

  .response-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .response-form {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .form-input {
    flex: 0 0 140px;
    padding: 0.5rem 0.625rem;
    font-family: 'Montserrat', sans-serif;
    font-size: 0.875rem;
    color: var(--color-text);
    background: white;
    border: 1px solid var(--color-warm);
    border-radius: 4px;
    transition: border-color 0.2s ease;
  }

  .form-textarea {
    flex: 1;
    padding: 0.5rem 0.625rem;
    font-family: 'Montserrat', sans-serif;
    font-size: 0.875rem;
    color: var(--color-text);
    background: white;
    border: 1px solid var(--color-warm);
    border-radius: 4px;
    transition: border-color 0.2s ease;
    resize: none;
    line-height: 1.4;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--color-slate);
  }

  .form-submit {
    flex: 0 0 auto;
    padding: 0.5rem 1rem;
    font-family: 'Montserrat', sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    color: white;
    background: var(--color-primary);
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .form-submit:hover {
    background: var(--color-urbanite);
  }

  .responses-list {
    margin-top: 1.5rem;
  }

  /* Responsive */
  @media (min-width: 768px) {
    .response-section {
      padding: 2.5rem 0;
    }

    .response-title {
      font-size: 1.125rem;
    }

    .form-input {
      flex: 0 0 160px;
    }
  }
</style>

<script>
  // Simple form handling - can be extended to integrate with a backend
  const form = document.getElementById('responseForm');
  if (form) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();

      // Get form data
      const formData = new FormData(form);
      const name = formData.get('name');
      const response = formData.get('response');


---
// Header component with centered logo
interface Props {
  artworkNumber?: string;
}

const { artworkNumber } = Astro.props;
---

<header class="site-header">
  <div class="header-container">
    <a href="/" class="brand-text">Buwara</a>
    <a href="/" class="logo-link">
      <img
        src="/images/logo/buwara logo black.png"
        alt="Buwara Logo"
        class="logo-image"
      />
    </a>
    {artworkNumber && <span class="artwork-number">{artworkNumber}</span>}
  </div>
</header>

<!-- Spacer to prevent content from going under fixed header -->
<div class="header-spacer"></div>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 40;
    background-color: #ffffff;
    border-bottom: 1px solid var(--color-background);
  }

  .header-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .brand-text {
    font-family: 'Forta', sans-serif;
    font-size: 1.25rem;
    color: var(--color-primary);
    text-decoration: none;
    transition: opacity 0.2s ease;
    z-index: 1;
  }

  .brand-text:hover {
    opacity: 0.8;
  }

  .logo-link {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: block;
    transition: opacity 0.2s ease;
  }

  .artwork-number {
    font-family: 'Forta', sans-serif;
    font-size: 1rem;
    color: var(--color-text-secondary);
    z-index: 1;
  }

  .logo-link:hover {
    opacity: 0.8;
  }

  .logo-image {
    height: 2rem;
    width: auto;
    display: block;
  }

  .header-spacer {
    height: 4rem;
  }

  @media (min-width: 768px) {
    .logo-image {
      height: 2.5rem;
    }

    .header-spacer {
      height: 4.5rem;
    }
  }
</style>

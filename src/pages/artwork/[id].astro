---
import MainLayout from '../../layouts/MainLayout.astro';
import Header from '../../components/Header.astro';
import artworksData from '../../data/artworks.json';

export function getStaticPaths() {
  return artworksData.map((artwork) => ({
    params: { id: artwork.id },
    props: { artwork }
  }));
}

const { artwork } = Astro.props;

// Get related artworks (exclude current one)
const relatedArtworks = artworksData.filter(a => a.id !== artwork.id).slice(0, 2);
---

<MainLayout title={`${artwork.title} - Buwara`} showSplash={true}>
  <Header artworkNumber={artwork.id} />
  <article class="artwork-page">
    <!-- Image 1 -->
    <section class="hero-image-section">
      <div class="container-narrow">
        <div class="hero-image-container">
          <img
            src={artwork.image1}
            alt={artwork.title}
            class="hero-image"
          />
        </div>
      </div>
    </section>

    <!-- Title & Subtitle -->
    <header class="artwork-header">
      <div class="container-narrow">
        <h1 class="artwork-title">
          {artwork.title}
        </h1>

        {artwork.subtitle && (
          <p class="artwork-subtitle">
            {artwork.subtitle}
          </p>
        )}
      </div>
    </header>

    <!-- Paragraph 1 -->
    <section class="article-section">
      <div class="container-narrow">
        <p class="article-paragraph">
          {artwork.paragraphs[0]}
        </p>
      </div>
    </section>

    <!-- Image 2 -->
    <section class="content-image-section">
      <div class="container-narrow">
        <div class="content-image-container">
          <img
            src={artwork.image2}
            alt={`${artwork.title} - Image 2`}
            class="content-image"
          />
        </div>
      </div>
    </section>

    <!-- Paragraph 2 -->
    <section class="article-section">
      <div class="container-narrow">
        <p class="article-paragraph">
          {artwork.paragraphs[1]}
        </p>
      </div>
    </section>

    <!-- Closing Question -->
    <section class="closing-section">
      <div class="container-narrow">
        <h3 class="closing-question">
          {artwork.closingQuestion}
        </h3>
      </div>
    </section>

    <!-- Credits -->
    <section class="credits-section">
      <div class="container-narrow">
        <div class="credits">
          <p class="credit-item">Artwork by <strong>{artwork.artist}</strong></p>
          <p class="credit-item">Article by <strong>{artwork.articleAuthor}</strong></p>
          <p class="credit-meta">{artwork.location} â€¢ {artwork.date}</p>
        </div>
      </div>
    </section>

    <!-- Related Articles -->
    {relatedArtworks.length > 0 && (
      <section class="related-section">
        <div class="container-narrow">
          <h2 class="related-title">Read More</h2>
          <div class="related-grid">
            {relatedArtworks.map((related) => (
              <a href={`/artwork/${related.id}`} class="related-card">
                <div class="related-image-wrapper">
                  <img
                    src={related.image1}
                    alt={related.title}
                    class="related-image"
                  />
                </div>
                <div class="related-content">
                  <p class="related-location">{related.location}</p>
                  <h3 class="related-card-title">{related.title}</h3>
                  {related.subtitle && (
                    <p class="related-subtitle">{related.subtitle}</p>
                  )}
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Footer -->
    <footer class="artwork-footer">
      <div class="container-narrow">
        <div class="footer-content">
          <div class="footer-logo">
            <img src="/images/logo/buwara logo black.png" alt="Buwara" class="footer-logo-img" />
          </div>
          <div class="social-links">
            <a href="https://instagram.com/buwara" target="_blank" rel="noopener" class="social-link" aria-label="Instagram">
              <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
            <a href="https://tiktok.com/@buwara" target="_blank" rel="noopener" class="social-link" aria-label="TikTok">
              <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
              </svg>
            </a>
            <a href="https://youtube.com/@buwara" target="_blank" rel="noopener" class="social-link" aria-label="YouTube">
              <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </footer>
  </article>
</MainLayout>

<style>
  .artwork-page {
    min-height: 100vh;
  }

  /* Hero Image */
  .hero-image-section {
    margin-bottom: 2rem;
  }

  .hero-image-container {
    width: 100%;
    overflow: hidden;
  }

  .hero-image {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Header (Title & Subtitle) */
  .artwork-header {
    padding: 2rem 0;
  }

  .artwork-title {
    font-size: 2rem;
    font-weight: 600;
    line-height: 1.2;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .artwork-subtitle {
    font-size: 1.125rem;
    font-style: italic;
    color: var(--color-secondary);
    font-weight: 400;
  }

  /* Article Sections */
  .article-section {
    padding: 1.5rem 0;
  }

  .article-paragraph {
    font-size: 1rem;
    line-height: 1.75;
    color: var(--color-text);
    text-align: justify;
  }

  /* Content Image */
  .content-image-section {
    margin: 2rem 0;
  }

  .content-image-container {
    width: 100%;
    overflow: hidden;
  }

  .content-image {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Closing Question */
  .closing-section {
    padding: 3rem 0 2rem;
  }

  .closing-question {
    font-size: 1.25rem;
    font-weight: 500;
    font-style: italic;
    line-height: 1.5;
    color: var(--color-primary);
    text-align: center;
  }

  /* Credits */
  .credits-section {
    padding: 2rem 0;
    border-top: 1px solid var(--color-warm);
    border-bottom: 1px solid var(--color-warm);
  }

  .credits {
    text-align: center;
  }

  .credit-item {
    font-size: 0.875rem;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .credit-item strong {
    font-weight: 600;
  }

  .credit-meta {
    font-size: 0.75rem;
    color: var(--color-slate);
    margin-top: 0.5rem;
  }

  /* Related Articles */
  .related-section {
    padding: 3rem 0;
  }

  .related-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 2rem;
  }

  .related-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .related-card {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease;
  }

  .related-card:hover {
    transform: translateY(-4px);
  }

  .related-image-wrapper {
    width: 100%;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .related-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .related-content {
    padding: 0.5rem 0;
  }

  .related-location {
    font-size: 0.75rem;
    color: var(--color-slate);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .related-card-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .related-subtitle {
    font-size: 0.875rem;
    font-style: italic;
    color: var(--color-secondary);
  }

  /* Footer */
  .artwork-footer {
    padding: 3rem 0 2rem;
    border-top: 1px solid var(--color-warm);
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    text-align: center;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer-logo-img {
    height: 2rem;
    width: auto;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .social-link {
    color: var(--color-slate);
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .social-link:hover {
    color: var(--color-primary);
    transform: translateY(-2px);
  }

  .social-link svg {
    width: 24px;
    height: 24px;
  }

  /* Responsive */
  @media (min-width: 768px) {
    .hero-image-section {
      margin-bottom: 3rem;
    }

    .artwork-header {
      padding: 3rem 0 2rem;
    }

    .artwork-title {
      font-size: 3rem;
    }

    .artwork-subtitle {
      font-size: 1.5rem;
    }

    .article-section {
      padding: 2rem 0;
    }

    .article-paragraph {
      font-size: 1.125rem;
      line-height: 1.8;
    }

    .content-image-section {
      margin: 3rem 0;
    }

    .closing-section {
      padding: 4rem 0 3rem;
    }

    .closing-question {
      font-size: 1.75rem;
    }

    .credits-section {
      padding: 3rem 0;
    }

    .related-section {
      padding: 4rem 0;
    }

    .related-title {
      font-size: 2rem;
    }

    .related-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2.5rem;
    }

    .artwork-footer {
      padding: 4rem 0 3rem;
    }

    .footer-content {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>

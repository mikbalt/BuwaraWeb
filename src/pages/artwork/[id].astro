---
import MainLayout from '../../layouts/MainLayout.astro';
import Header from '../../components/Header.astro';
import PhotoMap from '../../components/PhotoMap.astro';
import artworksData from '../../data/artworks.json';

export function getStaticPaths() {
  return artworksData.map((artwork) => ({
    params: { id: artwork.id },
    props: { artwork }
  }));
}

const { artwork } = Astro.props;
---

<MainLayout title={`${artwork.title} - Buwara`} showSplash={true}>
  <Header artworkNumber={artwork.id} />
  <article class="artwork-page">
    <!-- Header Section -->
    <header class="artwork-header">
      <div class="container-narrow">
        <div class="header-meta">
          <span class="location-tag">{artwork.location}</span>
          <span class="divider">â€¢</span>
          <span class="date-tag">{artwork.date}</span>
        </div>

        <h1 class="artwork-title">
          {artwork.title}
        </h1>

        {artwork.subtitle && (
          <p class="artwork-subtitle">
            {artwork.subtitle}
          </p>
        )}

        <div class="artist-credit">
          <span class="artist-name">{artwork.artist}</span>
        </div>
      </div>
    </header>

    <!-- Main Artwork Images -->
    <section class="artwork-image-section">
      <div class="container-narrow">
        <div class="artwork-images-grid">
          <div class="artwork-image-container">
            <img
              src={artwork.image1}
              alt={`${artwork.title} - Image 1`}
              class="artwork-image"
            />
          </div>
          <div class="artwork-image-container">
            <img
              src={artwork.image2}
              alt={`${artwork.title} - Image 2`}
              class="artwork-image"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Article Content -->
    <section class="article-content">
      <div class="container-narrow">
        <div class="paragraphs">
          {artwork.paragraphs.map((paragraph, index) => (
            <p class="article-paragraph" key={index}>
              {paragraph}
            </p>
          ))}
        </div>
      </div>
    </section>

    <!-- Photo Map Section -->
    <section class="map-section">
      <div class="container-narrow">
        <PhotoMap
          mapImage={artwork.mapImage}
          caption={artwork.mapCaption}
          location={artwork.location}
        />
      </div>
    </section>

    <!-- Footer -->
    <footer class="artwork-footer">
      <div class="container-narrow">
        <div class="footer-content">
          <div class="footer-logo">
            <img src="/images/logo/buwara logo black.png" alt="Buwara" class="footer-logo-img" />
          </div>
          <div class="social-links">
            <a href="https://instagram.com/buwara" target="_blank" rel="noopener" class="social-link" aria-label="Instagram">
              <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">

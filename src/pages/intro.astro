---
import MainLayout from '../layouts/MainLayout.astro';
import IntroHeader from '../components/IntroHeader.astro';
---

<MainLayout title="Buwara - Welcome" showSplash={true}>
  <IntroHeader />

  <div class="intro-container">
    <!-- Section 1: Intro-1 Image (Beige) -->
    <section class="intro-section section-1">
      <img src="/images/illustrations/Intro-1.png" alt="Introduction 1" class="intro-image" />
      <div class="scroll-indicator">
        <div class="scroll-arrow"></div>
        <span class="scroll-text">Scroll to explore</span>
      </div>
    </section>

    <!-- Section 2: Text with Image Background (Black) -->
    <section class="intro-section section-2">
      <img src="/images/illustrations/Intro-2.png" alt="Introduction 2" class="intro-background" />

      <p class="intro-text-left">
        Imagine if we were born and raised without a cultural background. A blank sheet of paper that ready to be written or drawn on.
      </p>

      <p class="intro-text-right">
        Naturally, we'd want to explore how culture connects to what we truly need. We'd dive deep into <u>past</u> cultures and imagining the exciting <u>future</u> culture. Without coercion and boring repetition.
      </p>
    </section>

    <!-- Section 3: Intro-3 Image (Beige) -->
    <section class="intro-section section-3">
      <img src="/images/illustrations/Intro-3.png" alt="Introduction 3" class="intro-image" />
    </section>

    <!-- Section 4: Transition to Home (Beige) -->
    <section class="intro-section section-4">
      <div class="transition-content">
        <h2 class="transition-title">Ready to explore?</h2>
        <p class="transition-subtitle">Scroll down to enter</p>
        <div class="scroll-indicator scroll-indicator-final">
          <div class="scroll-arrow"></div>
        </div>
      </div>
    </section>
  </div>
</MainLayout>

<style>
  .intro-container {
    scroll-snap-type: y mandatory;
    overflow-y: scroll;
    overflow-x: hidden;
    height: 100vh;
    scroll-behavior: smooth;
    padding-top: 0;
    margin-top: 0;
    transition: opacity 0.5s ease-out;
    -webkit-overflow-scrolling: touch; /* Smooth scrolling on iOS */
  }

  .intro-container.fade-out {
    opacity: 0;
  }

  .intro-section {
    scroll-snap-align: start;
    scroll-snap-stop: always;
    height: 100vh;
    height: 100dvh; /* Use dynamic viewport height for mobile */
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  /* Section 1: Beige Background */
  .section-1 {
    background-color: #e8e4dc;
    padding-top: 4rem;
    position: relative;
  }

  /* Section 2: Black Background */
  .section-2 {
    background-color: #000000;
  }

  /* Section 3: Beige Background */
  .section-3 {
    background-color: #e8e4dc;
  }

  /* Section 4: Beige Background */
  .section-4 {
    background-color: #e8e4dc;
  }

  .transition-content {
    text-align: center;
  }

  .transition-title {
    font-family: 'Crimson Text', serif;
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .transition-subtitle {
    font-family: 'Montserrat', sans-serif;
    font-size: 1rem;
    color: var(--color-slate);
    font-style: italic;
    margin-bottom: 2rem;
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    animation: bounce 2s infinite;
    z-index: 10;
  }

  .scroll-indicator-final {
    position: relative;
    bottom: auto;
    left: auto;
    transform: none;
    margin-top: 1rem;
  }

  .scroll-arrow {
    width: 24px;
    height: 24px;
    border-left: 2px solid var(--color-primary);
    border-bottom: 2px solid var(--color-primary);
    transform: rotate(-45deg);
  }

  .scroll-text {
    font-family: 'Crimson Text', serif;
    font-size: 0.875rem;
    color: var(--color-slate);
    text-transform: lowercase;
    letter-spacing: 0.05em;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }

  .intro-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    max-width: 100%;
    max-height: 100%;
    padding: 1rem;
  }

  /* Remove padding for section 1 to avoid header overlap */
  .section-1 .intro-image {
    padding-top: 4rem;
  }

  /* Section 2 specific styles */
  .intro-background {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: contain;
    opacity: 0.3;
    z-index: 1;
  }

  .intro-text-left {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 2rem;
    right: 2rem;
    max-width: 600px;
    color: #ffffff;
    font-family: 'Crimson Text', serif;
    font-size: 1.25rem;
    line-height: 1.6;
    text-align: left;
    z-index: 2;
  }

  .intro-text-right {
    position: absolute;
    bottom: 4rem;
    left: 50%;
    transform: translateX(-50%);
    right: 2rem;
    max-width: 650px;
    width: calc(100% - 4rem);
    color: #ffffff;
    font-family: 'Crimson Text', serif;
    font-size: 1.25rem;
    line-height: 1.6;
    text-align: left;
    z-index: 2;
  }

  /* Mobile (Phone) */
  @media (max-width: 640px) {
    .intro-container {
      scroll-padding-top: 0;
    }

    .intro-text-left {
      top: 20%;
      transform: translateY(0);
      left: 1.5rem;
      right: 1.5rem;
      max-width: none;
      font-size: 1.125rem;
      line-height: 1.5;
    }

    .intro-text-right {
      bottom: 2rem;
      left: 1.5rem;
      right: 1.5rem;
      transform: none;
      max-width: none;
      width: auto;
      font-size: 1.125rem;
      line-height: 1.5;
    }

    .scroll-indicator {
      bottom: 1.5rem;
    }

    .transition-title {
      font-size: 1.75rem;
    }
  }

  /* Tablet */
  @media (min-width: 641px) and (max-width: 1024px) {
    .intro-text-left {
      font-size: 1.5rem;
      line-height: 1.6;
      left: 3rem;
      right: 3rem;
    }

    .intro-text-right {
      font-size: 1.5rem;
      line-height: 1.6;
      bottom: 3rem;
      width: calc(100% - 6rem);
    }

    .intro-background {
      opacity: 0.4;
    }
  }

  /* Desktop */
  @media (min-width: 1025px) {
    .intro-text-left {
      font-size: 1.75rem;
      line-height: 1.6;
      max-width: 45%;
    }

    .intro-text-right {
      font-size: 1.75rem;
      line-height: 1.6;
      max-width: 50%;
    }
  }

  /* Large Desktop */
  @media (min-width: 1440px) {
    .intro-text-left {
      font-size: 2rem;
      line-height: 1.7;
    }

    .intro-text-right {
      font-size: 2rem;
      line-height: 1.7;
    }
  }
</style>

<script>
  // Track scroll position and redirect to homepage when scrolling down from section 4
  const introContainer = document.querySelector('.intro-container') as HTMLElement;
  const sections = document.querySelectorAll('.intro-section');
  let isRedirecting = false;

  if (introContainer && sections.length > 0) {
    let lastScrollTop = 0;

    introContainer.addEventListener('scroll', () => {
      if (isRedirecting) return;

      const scrollPosition = introContainer.scrollTop;
      const sectionHeight = window.innerHeight;
      const currentSection = Math.round(scrollPosition / sectionHeight);
      const maxScroll = introContainer.scrollHeight - window.innerHeight;

      // If we're at section 4 (index 3) and trying to scroll down further
      if (currentSection >= sections.length - 1) {
        // If scroll position is near the bottom or trying to scroll past
        if (scrollPosition > lastScrollTop && scrollPosition >= maxScroll - 10) {
          // User is scrolling down from last section, start fade-out transition
          isRedirecting = true;
          introContainer.classList.add('fade-out');

          // Redirect after fade-out animation completes
          setTimeout(() => {
            window.location.href = '/';
          }, 500);
        }
      }

      lastScrollTop = scrollPosition;
    });

    // Hide scroll indicators after first scroll
    const scrollIndicators = document.querySelectorAll('.scroll-indicator');
    let hasScrolled = false;

    introContainer.addEventListener('scroll', () => {
      if (!hasScrolled && introContainer.scrollTop > 50) {
        hasScrolled = true;
        scrollIndicators.forEach(indicator => {
          (indicator as HTMLElement).style.opacity = '0';
          (indicator as HTMLElement).style.transition = 'opacity 0.3s ease-out';
        });
      }
    });
  }

  // Mark that user has visited intro page (for first-time visitor tracking)
  if (typeof window !== 'undefined') {
    localStorage.setItem('hasVisitedIntro', 'true');
  }
</script>

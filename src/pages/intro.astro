---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
---

<MainLayout title="Buwara - Welcome" showSplash={true}>
  <Header />

  <div class="intro-container">
    <!-- Section 1: Intro-1 Image (Beige) -->
    <section class="intro-section section-1">
      <img src="/images/illustrations/Intro-1.png" alt="Introduction 1" class="intro-image" />
      <div class="scroll-indicator">
        <div class="scroll-arrow"></div>
        <span class="scroll-text">Scroll to explore</span>
      </div>
    </section>

    <!-- Section 2: Text with Image Background (Black) -->
    <section class="intro-section section-2">
      <img src="/images/illustrations/Intro-2.png" alt="Introduction 2" class="intro-background" />

      <p class="intro-text-left">
        Imagine if we were born and raised <u>without</u> a cultural background. A blank sheet of paper that ready to be written or drawn on.
      </p>

      <p class="intro-text-right">
        Naturally, we'd want to explore how culture connects to what we truly need. We'd dive deep into <u>past</u> cultures and imagining the exciting <u>future</u> culture. Without coercion and boring repetition.
      </p>
    </section>

    <!-- Section 3: White Background with bg-3 -->
    <section class="intro-section section-3">
      <div class="section-3-bg"></div>
      <div class="section-3-content">
        <p class="section-3-text-1">In Sanskrit,</p>
        <p class="section-3-text-1"><strong>"buwara"</strong> means <strong>"wandering"</strong>.</p>
        <img src="/images/illustrations/Intro-3.png" alt="Introduction 3" class="intro-3-image" />
        <div class="section-3-text-container">
          <p class="section-3-text-2">
            <strong>We're people who love to explore and bringing everyone closer to <span class="highlight-red">culture</span> through unboring everyday <span class="highlight-red">things</span></strong>.
          </p>
          <img src="/images/logo/buwara logo black.png" alt="Buwara" class="section-3-logo" />
        </div>
      </div>
    </section>

    <!-- Section 4: Transition to Home (Beige) -->
    <section class="intro-section section-4">
      <div class="transition-content">
        <h2 class="transition-title">Ready to explore?</h2>
        <p class="transition-subtitle">Scroll down to enter</p>
        <div class="scroll-indicator scroll-indicator-final">
          <div class="scroll-arrow"></div>
        </div>
      </div>
    </section>
  </div>
</MainLayout>

<style>
  .intro-container {
    scroll-snap-type: y mandatory;
    overflow-y: scroll;
    overflow-x: hidden;
    height: 100vh;
    scroll-behavior: smooth;
    padding-top: 0;
    margin-top: 0;
    transition: opacity 0.5s ease-out;
    -webkit-overflow-scrolling: touch; /* Smooth scrolling on iOS */
  }

  .intro-container.fade-out {
    opacity: 0;
  }

  .intro-section {
    scroll-snap-align: start;
    scroll-snap-stop: always;
    height: 100vh;
    height: 100dvh; /* Use dynamic viewport height for mobile */
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  /* Section 1: Beige Background */
  .section-1 {
    background-color: #e8e4dc;
    padding: 0;
    position: relative;
  }

  /* Section 2: Black Background */
  .section-2 {
    background-color: #000000;
  }

  /* Section 3: White Background with full screen bg image */
  .section-3 {
    background-color: #ffffff;
    position: relative;
  }

  .section-3-bg {
    position: absolute;
    inset: 0;
    background-image: url('/images/illustrations/bg-3.png');
    background-size: 200%;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 0.5;
    z-index: 1;
  }

  .section-3-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    padding: 2rem;
    gap: 2rem;
  }

  .section-3-text-1 {
    font-family: 'Montserrat', serif;
    font-size: 3rem;
    color: #3d4f53;
    text-align: left;
    max-width: 300px;
  }

  .intro-3-image {
    max-width: 50%;
    height: auto;
    object-fit: contain;
  }

  .section-3-text-container {
    width: 100%;
    max-width: 1000px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.5rem;
  }

  .section-3-text-2 {
    font-family: 'Montserrat', sans-serif;
    font-size: 3rem;
    line-height: 1.5;
    color: #3d4f53;
    text-align: left;
    width: 100%;
  }

  .section-3-logo {
    height: 3rem;
    width: auto;
    align-self: flex-start;
  }

  .highlight-red {
    color: #8B3A3A;
  }

  /* Mobile adjustments for section 3 */
  @media (max-width: 640px) {
    .section-3-bg {
      background-size: 200%;
    }

    .intro-3-image {
      max-width: 70%;
    }

    .section-3-text-1 {
      font-size: 0.875rem;
    }

    .section-3-text-container {
      padding: 0 1rem;
    }

    .section-3-text-2 {
      font-size: 1.75rem;
      line-height: 1.4;
    }

    .section-3-content {
      padding: 1.5rem;
      gap: 1.5rem;
    }

    .section-3-logo {
      height: 2.5rem;
    }
  }

  /* Tablet adjustments for section 3 */
  @media (min-width: 641px) and (max-width: 1024px) {
    .intro-3-image {
      max-width: 60%;
    }

    .section-3-text-2 {
      font-size: 2.5rem;
    }

    .section-3-text-container {
      padding: 0 2rem;
    }
  }

  /* Desktop adjustments for section 3 */
  @media (min-width: 1025px) {
    .section-3-text-2 {
      font-size: 3rem;
    }

    .section-3-text-container {
      padding: 0 3rem;
    }
  }

  /* Section 4: Beige Background */
  .section-4 {
    background-color: #e8e4dc;
  }

  .transition-content {
    text-align: center;
  }

  .transition-title {
    font-family: 'Crimson Text', serif;
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .transition-subtitle {
    font-family: 'Montserrat', sans-serif;
    font-size: 1rem;
    color: var(--color-slate);
    font-style: italic;
    margin-bottom: 2rem;
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    animation: bounce 2s infinite;
    z-index: 10;
  }

  .scroll-indicator-final {
    position: relative;
    bottom: auto;
    left: auto;
    transform: none;
    margin-top: 1rem;
  }

  .scroll-arrow {
    width: 24px;
    height: 24px;
    border-left: 2px solid var(--color-primary);
    border-bottom: 2px solid var(--color-primary);
    transform: rotate(-45deg);
  }

  .scroll-text {
    font-family: 'Crimson Text', serif;
    font-size: 0.875rem;
    color: var(--color-slate);
    text-transform: lowercase;
    letter-spacing: 0.05em;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }

  .intro-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    max-width: 100%;
    max-height: 100%;
    padding: 0;
  }

  /* Section 1: Keep artwork intact, full width but contained */
  .section-1 .intro-image {
    padding: 0;
    margin-top: 4rem;
    object-fit: contain;
    object-position: center;
  }

  /* Mobile: adjust padding for section 1 */
  @media (max-width: 640px) {
    .section-1 .intro-image {
      padding: 0;
      margin-top: 3.5rem;
    }
  }

  /* Desktop: more breathing room */
  @media (min-width: 1025px) {
    .section-1 .intro-image {
      padding: 0;
      margin-top: 5rem;
    }
  }

  /* Section 2 specific styles */
  .intro-background {
    position: relative;
    width: 70%;
    height: 70%;
    right: -10%;
    object-fit: contain;
    object-position: right center;
    opacity: 0.5;
    z-index: 1;
  }

  .intro-text-left {
    position: absolute;
    top: 6rem;
    left: 2rem;
    right: 2rem;
    max-width: 65%;
    color: #ffffff;
    font-family: 'Montserrat', sans-serif;
    font-size: 1.5rem;
    line-height: 1.6;
    text-align: justify;
    z-index: 10;
  }

  .intro-text-right {
    position: absolute;
    bottom: 4rem;
    right: 2rem;
    left: 2rem;
    max-width: 65%;
    margin-left: auto;
    color: #ffffff;
    font-family: 'Montserrat', sans-serif;
    font-size: 1.5rem;
    line-height: 1.6;
    text-align: justify;
    z-index: 10;
  }

  /* Mobile (Phone) */
  @media (max-width: 640px) {
    .intro-container {
      scroll-padding-top: 0;
    }

    .intro-background {
      width: 100%;
      height: 100%;
      right: -20%;
      opacity: 0.8;
    }

    .intro-text-left {
      top: 5rem;
      left: 1.5rem;
      right: auto;
      max-width: 75%;
      font-size: 2rem;
      line-height: 1.5;
      text-align: justify;
    }

    .intro-text-right {
      bottom: 2rem;
      right: 1.5rem;
      left: auto;
      max-width: 75%;
      margin-left: 0;
      font-size: 2rem;
      line-height: 1.5;
      text-align: justify;
    }

    .scroll-indicator {
      bottom: 1.5rem;
    }

    .transition-title {
      font-size: 1.75rem;
    }
  }

  /* Tablet */
  @media (min-width: 641px) and (max-width: 1024px) {
    .intro-background {
      width: 65%;
      height: 65%;
      right: -10%;
      opacity: 0.5;
    }

    .intro-text-left {
      top: 5rem;
      left: 2.5rem;
      right: 2.5rem;
      max-width: 70%;
      font-size: 1.5rem;
      line-height: 1.6;
      text-align: justify;
    }

    .intro-text-right {
      bottom: 3rem;
      right: 2.5rem;
      left: 2.5rem;
      max-width: 70%;
      margin-left: auto;
      font-size: 1.5rem;
      line-height: 1.6;
      text-align: justify;
    }
  }

  /* Desktop */
  @media (min-width: 1025px) {
    .intro-background {
      width: 70%;
      height: 70%;
      right: -10%;
      opacity: 0.5;
    }

    .intro-text-left {
      top: 7rem;
      left: 3rem;
      right: 3rem;
      max-width: 55%;
      font-size: 1.75rem;
      line-height: 1.6;
      text-align: justify;
    }

    .intro-text-right {
      bottom: 5rem;
      right: 3rem;
      left: 3rem;
      max-width: 60%;
      margin-left: auto;
      font-size: 1.75rem;
      line-height: 1.6;
      text-align: justify;
    }
  }

  /* Large Desktop */
  @media (min-width: 1440px) {
    .intro-background {
      width: 65%;
      height: 65%;
      right: -8%;
      opacity: 0.5;
    }

    .intro-text-left {
      top: 8rem;
      left: 4rem;
      right: 4rem;
      max-width: 50%;
      font-size: 2rem;
      line-height: 1.7;
    }

    .intro-text-right {
      bottom: 6rem;
      right: 4rem;
      left: 4rem;
      max-width: 55%;
      margin-left: auto;
      font-size: 2rem;
      line-height: 1.7;
    }
  }
</style>

<script>
  // Track scroll position and redirect to homepage when scrolling down from section 4
  const introContainer = document.querySelector('.intro-container') as HTMLElement;
  const sections = document.querySelectorAll('.intro-section');
  let isRedirecting = false;

  if (introContainer && sections.length > 0) {
    let lastScrollTop = 0;

    introContainer.addEventListener('scroll', () => {
      if (isRedirecting) return;

      const scrollPosition = introContainer.scrollTop;
      const sectionHeight = window.innerHeight;
      const currentSection = Math.round(scrollPosition / sectionHeight);
      const maxScroll = introContainer.scrollHeight - window.innerHeight;

      // If we're at section 4 (index 3) and trying to scroll down further
      if (currentSection >= sections.length - 1) {
        // If scroll position is near the bottom or trying to scroll past
        if (scrollPosition > lastScrollTop && scrollPosition >= maxScroll - 10) {
          // User is scrolling down from last section, start fade-out transition
          isRedirecting = true;
          introContainer.classList.add('fade-out');

          // Redirect after fade-out animation completes
          setTimeout(() => {
            window.location.href = '/';
          }, 500);
        }
      }

      lastScrollTop = scrollPosition;
    });

    // Hide scroll indicators after first scroll
    const scrollIndicators = document.querySelectorAll('.scroll-indicator');
    let hasScrolled = false;

    introContainer.addEventListener('scroll', () => {
      if (!hasScrolled && introContainer.scrollTop > 50) {
        hasScrolled = true;
        scrollIndicators.forEach(indicator => {
          (indicator as HTMLElement).style.opacity = '0';
          (indicator as HTMLElement).style.transition = 'opacity 0.3s ease-out';
        });
      }
    });
  }

  // Mark that user has visited intro page (for first-time visitor tracking)
  if (typeof window !== 'undefined') {
    localStorage.setItem('hasVisitedIntro', 'true');
  }
</script>

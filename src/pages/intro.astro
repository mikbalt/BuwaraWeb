---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
---

<MainLayout title="Buwara - Welcome" showSplash={true}>
  <Header />

  <div class="intro-container">
    <!-- Section 1: Intro-1 Image (Beige) -->
    <section class="intro-section section-1">
      <img src="/images/illustrations/Intro-1.png" alt="Introduction 1" class="intro-image" />
      <div class="scroll-indicator">
        <div class="scroll-arrow"></div>
        <span class="scroll-text">Scroll to explore</span>
      </div>
    </section>

    <!-- Section 2: Text with Image Background (Black) -->
    <section class="intro-section section-2">
      <img src="/images/illustrations/Intro-2.png" alt="Introduction 2" class="intro-background" />

      <p class="intro-text-left">
        Imagine if we were born and raised <u>without</u> a cultural background. A blank sheet of paper that ready to be written or drawn on.
      </p>

      <p class="intro-text-right">
        Naturally, we'd want to explore how culture connects to what we truly need. We'd dive deep into <u>past</u> cultures and imagining the exciting <u>future</u> culture. Without coercion and boring repetition.
      </p>
    </section>

    <!-- Section 3: White Background with bg-3 -->
    <section class="intro-section section-3">
      <div class="section-3-bg"></div>
      <div class="section-3-content">
        <p class="section-3-text-1">In Sanskrit,</p>
        <p class="section-3-text-1"><strong>"buwara"</strong> means <strong>"wandering"</strong>.</p>
        <img src="/images/illustrations/Intro-3.png" alt="Introduction 3" class="intro-3-image" />
        <div class="section-3-text-container">
          <p class="section-3-text-2">
            <strong>We're people who love to explore and bringing everyone closer to <span class="highlight-red">culture</span> through unboring everyday <span class="highlight-red">things</span></strong>.
          </p>
          <img src="/images/logo/buwara logo black.png" alt="Buwara" class="section-3-logo" />
        </div>
      </div>
    </section>

    <!-- Section 4: Transition to Home (Beige) -->
    <section class="intro-section section-4">
      <div class="transition-content">
        <h2 class="transition-title">Ready to explore?</h2>
        <p class="transition-subtitle">Scroll down to enter</p>
        <div class="scroll-indicator scroll-indicator-final">
          <div class="scroll-arrow"></div>
        </div>
      </div>
    </section>
  </div>
</MainLayout>

<style>
  .intro-container {
    scroll-snap-type: y mandatory;
    overflow-y: scroll;
    overflow-x: hidden;
    height: 100vh;
    scroll-behavior: smooth;
    padding-top: 0;
    margin-top: 0;
    transition: opacity 0.5s ease-out;
    -webkit-overflow-scrolling: touch; /* Smooth scrolling on iOS */
  }

  .intro-container.fade-out {
    opacity: 0;
  }

  .intro-section {
    scroll-snap-align: start;
    scroll-snap-stop: always;
    height: 100vh;
    height: 100dvh; /* Use dynamic viewport height for mobile */
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  /* Section 1: Beige Background */
  .section-1 {
    background-color: #e8e4dc;
    padding: 0;
    position: relative;
  }

  /* Section 2: Black Background */
  .section-2 {
    background-color: #000000;
  }

  /* Section 3: White Background with full screen bg image */
  .section-3 {
    background-color: #ffffff;
    position: relative;
  }

  .section-3-bg {
    position: absolute;
    inset: 0;
    background-image: url('/images/illustrations/bg-3.png');
    background-size: 165%;
    background-position: center center;
    background-repeat: no-repeat;
    opacity: 0.5;
    z-index: 1;
  }

  .section-3-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    min-height: 100dvh;
    padding: clamp(6.5rem, 12vh, 8rem) clamp(1.75rem, 5vw, 3rem) clamp(3rem, 8vh, 4rem);
    gap: 0.95rem;
  }

  .section-3-text-1 {
    font-family: 'Montserrat', sans-serif;
    font-size: 0.85rem;
    color: var(--color-primary);
    text-align: left;
    align-self: flex-start;
    max-width: 320px;
    margin: 0.25rem 0 0;
    letter-spacing: 0.01em;
    padding-left: clamp(1.25rem, 5vw, 2rem);
  }

  .section-3-text-1 + .section-3-text-1 {
    margin-top: -0.25rem;
    margin-bottom: -0.5rem;
  }

  .intro-3-image {
    max-width: clamp(240px, 50vw, 360px);
    height: auto;
    object-fit: contain;
    align-self: center;
    margin: clamp(0.35rem, 2.5vh, 1rem) 0 clamp(0.5rem, 1.5vh, 0.75rem);
    filter: drop-shadow(0 8px 20px rgba(0, 0, 0, 0.08));
  }

  .section-3-text-container {
    width: 100%;
    max-width: 1000px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
    padding: 0 clamp(1.25rem, 5vw, 2rem);
  }

  .section-3-text-2 {
    font-family: 'Montserrat', sans-serif;
    font-size: clamp(1.05rem, 2.4vw, 1.35rem);
    line-height: 1.5;
    color: var(--color-primary);
    text-align: left;
    width: 100%;
    max-width: 540px;
    letter-spacing: 0.01em;
  }

  .section-3-logo {
    display: block;
    height: 2rem;
    width: auto;
    opacity: 0.85;
    margin-top: 0.75rem;
  }

  .highlight-red {
    color: #8b3a3a;
  }

  /* Mobile adjustments for section 3 */
  @media (max-width: 640px) {
    .section-3-bg {
      background-size: 180%;
    }

    .intro-3-image {
      max-width: 65%;
      margin: 1.25rem auto;
      align-self: flex-start;
    }

    .section-3-text-1 {
      font-size: 0.78rem;
      max-width: 260px;
      padding-left: 1rem;
    }

    .section-3-text-1 + .section-3-text-1 {
      margin-top: -0.5rem;
      margin-bottom: -0.65rem;
    }

    .section-3-text-container {
      padding: 0 1rem;
      max-width: 100%;
      gap: 0.85rem;
      align-items: flex-start;
    }

    .section-3-text-2 {
      font-size: 1rem;
      line-height: 1.45;
      max-width: 85%;
    }

    .section-3-content {
      padding: 4.5rem 1rem 2.75rem;
      gap: 1.25rem;
      justify-content: flex-start;
      align-items: flex-start;
    }

    .section-3-logo {
      display: block;
      height: 1.65rem;
      opacity: 0.8;
    }
  }

  /* Tablet adjustments for section 3 */
  @media (min-width: 641px) and (max-width: 1024px) {
    .intro-3-image {
      max-width: 48%;
    }

    .section-3-text-1 {
      font-size: 0.85rem;
      max-width: 320px;
      padding-left: 2rem;
    }

    .section-3-text-2 {
      font-size: 1.08rem;
      max-width: 72%;
      line-height: 1.4;
    }

    .section-3-text-container {
      padding: 0 2rem;
      gap: 1.1rem;
    }

    .section-3-content {
      padding-top: 7.25rem;
      padding-bottom: 3.25rem;
      gap: 1.15rem;
      justify-content: flex-start;
    }

    .section-3-logo {
      display: block;
      height: 2rem;
      opacity: 0.9;
    }
  }

  /* Desktop adjustments for section 3 */
  @media (min-width: 1025px) {
    .intro-3-image {
      max-width: 34%;
      margin: 0.4rem 0 0.9rem;
    }

    .section-3-text-1 {
      font-size: 0.95rem;
      margin-top: 0.1rem;
      padding-left: 3rem;
    }

    .section-3-text-2 {
      font-size: 1.15rem;
      max-width: 500px;
      line-height: 1.4;
    }

    .section-3-text-container {
      padding: 0 3rem;
      gap: 0.9rem;
    }

    .section-3-content {
      padding-top: 8.25rem;
      padding-bottom: 3.5rem;
      gap: 0.85rem;
      justify-content: flex-start;
    }

    .section-3-logo {
      display: block;
      height: 2.1rem;
      opacity: 0.9;
    }
  }

  /* Section 4: Beige Background */
  .section-4 {
    background-color: #e8e4dc;
  }

  .transition-content {
    text-align: center;
  }

  .transition-title {
    font-family: 'Crimson Text', serif;
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .transition-subtitle {
    font-family: 'Montserrat', sans-serif;
    font-size: 1rem;
    color: var(--color-slate);
    font-style: italic;
    margin-bottom: 2rem;
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    animation: bounce 2s infinite;
    z-index: 10;
  }

  .scroll-indicator-final {
    position: relative;
    bottom: auto;
    left: auto;
    transform: none;
    margin-top: 1rem;
  }

  .scroll-arrow {
    width: 24px;
    height: 24px;
    border-left: 2px solid var(--color-primary);
    border-bottom: 2px solid var(--color-primary);
    transform: rotate(-45deg);
  }

  .scroll-text {
    font-family: 'Crimson Text', serif;
    font-size: 0.875rem;
    color: var(--color-slate);
    text-transform: lowercase;
    letter-spacing: 0.05em;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }

  .intro-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    max-width: 100%;
    max-height: 100%;
    padding: 0;
  }

  /* Section 1: Keep artwork intact, full width but contained */
  .section-1 .intro-image {
    padding: 0;
    margin-top: 4rem;
    object-fit: contain;
    object-position: center;
  }

  /* Mobile: adjust padding for section 1 */
  @media (max-width: 640px) {
    .section-1 .intro-image {
      padding: 0;
      margin-top: 3.5rem;
    }
  }

  /* Desktop: more breathing room */
  @media (min-width: 1025px) {
    .section-1 .intro-image {
      padding: 0;
      margin-top: 5rem;
    }
  }

  /* Section 2 specific styles */
  .intro-background {
    position: absolute;
    width: 70%;
    height: 70%;
    right: -10%;
    object-fit: contain;
    object-position: right center;
    opacity: 0.5;
    z-index: 1;
  }

  .intro-text-left {
    position: absolute;
    top: 6rem;
    left: 2rem;
    right: 2rem;
    max-width: 65%;
    color: #ffffff;
    font-family: 'Montserrat', sans-serif;
    font-size: 1.25rem;
    line-height: 1.6;
    text-align: left;
    z-index: 10;
  }

  .intro-text-right {
    position: absolute;
    bottom: 4rem;
    right: 2rem;
    left: 2rem;
    max-width: 65%;
    margin-left: auto;
    color: #ffffff;
    font-family: 'Montserrat', sans-serif;
    font-size: 1.25rem;
    line-height: 1.6;
    text-align: left;
    z-index: 10;
  }

  /* Mobile (Phone) */
  @media (max-width: 640px) {
    .intro-container {
      scroll-padding-top: 0;
    }

    .intro-background {
      position: absolute;
      width: 100%;
      height: 100%;
      right: -20%;
      opacity: 0.8;
      z-index: 1;
    }

    .section-2 {
      display: flex;
      flex-direction: column;
      justify-content: space-evenly;
      align-items: flex-start;
      padding: 5rem 1.5rem;
    }

    .section-2 .intro-text-left {
      position: static;
      top: auto;
      left: auto;
      right: auto;
      max-width: 90%;
      margin-bottom: 4rem;
      font-size: 1.125rem;
      line-height: 1.5;
      text-align: left;
      z-index: 10;
    }

    .section-2 .intro-text-right {
      position: static;
      bottom: auto;
      right: auto;
      left: auto;
      max-width: 90%;
      align-self: flex-end;
      margin-left: 0;
      font-size: 1.125rem;
      line-height: 1.5;
      text-align: left;
      z-index: 10;
    }

    .scroll-indicator {
      bottom: 1.5rem;
    }

    .transition-title {
      font-size: 1.75rem;
    }
  }

  /* Tablet */
  @media (min-width: 641px) and (max-width: 1024px) {
    .intro-background {
      width: 65%;
      height: 65%;
      right: -10%;
      opacity: 0.5;
    }

    .intro-text-left {
      top: 5rem;
      left: 2.5rem;
      right: 2.5rem;
      max-width: 70%;
      font-size: 1.25rem;
      line-height: 1.6;
      text-align: left;
    }

    .intro-text-right {
      bottom: 3rem;
      right: 2.5rem;
      left: 2.5rem;
      max-width: 70%;
      margin-left: auto;
      font-size: 1.25rem;
      line-height: 1.6;
      text-align: left;
    }
  }

  /* Desktop */
  @media (min-width: 1025px) {
    .intro-background {
      width: 70%;
      height: 70%;
      right: -10%;
      opacity: 0.5;
    }

    .intro-text-left {
      top: 7rem;
      left: 3rem;
      right: 3rem;
      max-width: 55%;
      font-size: 1.5rem;
      line-height: 1.6;
      text-align: left;
    }

    .intro-text-right {
      bottom: 5rem;
      right: 3rem;
      left: 3rem;
      max-width: 60%;
      margin-left: auto;
      font-size: 1.5rem;
      line-height: 1.6;
      text-align: left;
    }
  }

  /* Large Desktop */
  @media (min-width: 1440px) {
    .intro-background {
      width: 65%;
      height: 65%;
      right: -8%;
      opacity: 0.5;
    }

    .intro-text-left {
      top: 8rem;
      left: 4rem;
      right: 4rem;
      max-width: 50%;
      font-size: 1.65rem;
      line-height: 1.7;
    }

    .intro-text-right {
      bottom: 6rem;
      right: 4rem;
      left: 4rem;
      max-width: 55%;
      margin-left: auto;
      font-size: 1.65rem;
      line-height: 1.7;
    }
  }

  /* Accessibility: Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .intro-container {
      scroll-behavior: auto;
    }

    .scroll-indicator {
      animation: none;
    }

    @keyframes bounce {
      0%, 100% {
        transform: translateX(-50%) translateY(0);
      }
    }

    .intro-container.fade-out {
      transition: none;
      opacity: 0;
    }
  }
</style>

<script>
  // Track scroll position and redirect to homepage when scrolling down from section 4
  const introContainer = document.querySelector('.intro-container');
  const sections = document.querySelectorAll('.intro-section');
  const scrollIndicators = document.querySelectorAll('.scroll-indicator');
  let isRedirecting = false;
  let hasScrolled = false;
  let lastScrollTop = 0;

  if (introContainer && sections.length > 0) {
    const handleScroll = () => {
      if (isRedirecting) return;

      const scrollPosition = introContainer.scrollTop;
      const sectionHeight = introContainer.clientHeight || window.innerHeight;
      const currentSection = Math.round(scrollPosition / sectionHeight);
      const maxScroll = introContainer.scrollHeight - sectionHeight;

      // If we're at section 4 (index 3) and trying to scroll down further
      if (currentSection >= sections.length - 1) {
        if (scrollPosition > lastScrollTop && scrollPosition >= maxScroll - 10) {
          isRedirecting = true;
          introContainer.classList.add('fade-out');

          setTimeout(() => {
            window.location.href = '/';
          }, 500);
        }
      }

      if (!hasScrolled && scrollPosition > 50) {
        hasScrolled = true;
        scrollIndicators.forEach((indicator) => {
          indicator.style.opacity = '0';
          indicator.style.transition = 'opacity 0.3s ease-out';
        });
      }

      lastScrollTop = scrollPosition;
    };

    introContainer.addEventListener('scroll', handleScroll, { passive: true });
  }

  // Mark that user has visited intro page (for first-time visitor tracking)
  if (typeof window !== 'undefined') {
    localStorage.setItem('hasVisitedIntro', 'true');
  }
</script>

---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import artworksData from '../data/artworks.json';
---

<MainLayout title="Buwara - We are all wanderers" showSplash={true}>
  <Header />

  <div class="homepage">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-container">
        <div class="hero-content">
          <h1 class="hero-title">Discover Art Through Stories</h1>
          <p class="hero-description">
            Eksplorasi karya seni melalui narasi yang mendalam.
            Setiap karya memiliki cerita, setiap lokasi memiliki makna.
          </p>
          <div class="hero-divider"></div>
        </div>
      </div>
    </section>

    <!-- Featured Artwork (Latest/First) -->
    {artworksData[0] && (
      <section class="featured-section">
        <div class="container-narrow">
          <div class="featured-label">Featured Artwork</div>
          <a href={`/artwork/${artworksData[0].id}`} class="featured-card">
            <div class="featured-image-wrapper">
              <img
                src={artworksData[0].image1}
                alt={artworksData[0].title}
                class="featured-image"
              />
            </div>
            <div class="featured-content">
              <div class="featured-meta">
                <span class="featured-location">{artworksData[0].location}</span>
                <span class="featured-divider">â€¢</span>
                <span class="featured-date">{artworksData[0].date}</span>
              </div>
              <h2 class="featured-title">{artworksData[0].title}</h2>
              {artworksData[0].subtitle && (
                <p class="featured-subtitle">{artworksData[0].subtitle}</p>
              )}
              <p class="featured-artist">by {artworksData[0].artist}</p>
              <div class="featured-excerpt">
                {artworksData[0].paragraphs[0].substring(0, 180)}...
              </div>
              <div class="read-more">
                <span>Baca Selengkapnya</span>
                <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </div>
            </div>
          </a>
        </div>
      </section>
    )}

    <!-- All Artworks Grid -->
    {artworksData.length > 1 && (
      <section class="artworks-section">
        <div class="container-narrow">
          <h2 class="section-title">All Artworks</h2>
          <div class="artworks-grid">
            {artworksData.slice(1).map((artwork) => (
              <a href={`/artwork/${artwork.id}`} class="artwork-card">
                <div class="card-image">
                  <img
                    src={artwork.image1}
                    alt={artwork.title}
                    class="artwork-thumbnail"
                    loading="lazy"
                  />
                  <div class="card-overlay">
                    <span class="view-artwork">View Artwork</span>
                  </div>
                </div>
                <div class="card-content">
                  <div class="card-meta">
                    <span class="card-location">{artwork.location}</span>
                  </div>
                  <h3 class="card-title">{artwork.title}</h3>
                  <p class="card-artist">{artwork.artist}</p>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Footer -->
    <footer class="homepage-footer">
      <div class="container-narrow">
        <div class="footer-content">
          <div class="footer-logo">
            <img src="/images/logo/buwara logo black.png" alt="Buwara" class="footer-logo-img" />
          </div>
          <p class="footer-tagline">Connecting Art, Place, and Story</p>
          <div class="social-links">
            <a href="https://instagram.com/buwara" target="_blank" rel="noopener" class="social-link" aria-label="Instagram">
              <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
            <a href="https://tiktok.com/@buwara" target="_blank" rel="noopener" class="social-link" aria-label="TikTok">
              <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
              </svg>
            </a>
            <a href="https://youtube.com/@buwara" target="_blank" rel="noopener" class="social-link" aria-label="YouTube">
              <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </footer>
  </div>
</MainLayout>

<style>
  .homepage {
    min-height: 100vh;
  }

  /* Hero Section */
  .hero-section {
    padding: 4rem 0 3rem;
  }

  .hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .hero-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 400;
    line-height: 1.2;
    color: var(--color-primary);
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .hero-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-secondary);
    margin-bottom: 2rem;
  }

  .hero-divider {
    width: 60px;
    height: 2px;
    background-color: var(--color-slate);
    margin: 0 auto;
  }

  /* Featured Section */
  .featured-section {
    padding: 3rem 0;
  }

  .featured-label {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-slate);
    margin-bottom: 1.5rem;
  }

  .featured-card {
    display: block;
    background-color: var(--color-surface);
    border-radius: 2px;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(61, 79, 83, 0.1);
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .featured-card:hover {
    box-shadow: 0 8px 24px rgba(61, 79, 83, 0.15);
    transform: translateY(-4px);
  }

  .featured-image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background-color: var(--color-warm);
  }

  .featured-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .featured-card:hover .featured-image {
    transform: scale(1.05);
  }

  .featured-content {
    padding: 2rem;
  }

  .featured-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-slate);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .featured-divider {
    color: var(--color-warm);
  }

  .featured-title {
    font-size: 2rem;
    font-weight: 600;
    line-height: 1.2;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .featured-subtitle {
    font-size: 1.25rem;
    font-style: italic;
    color: var(--color-secondary);
    margin-bottom: 0.75rem;
    font-weight: 300;
  }

  .featured-artist {
    font-size: 0.9375rem;
    color: var(--color-secondary);
    margin-bottom: 1.5rem;
  }

  .featured-excerpt {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text);
    margin-bottom: 1.5rem;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-primary);
    transition: gap 0.2s ease;
  }

  .featured-card:hover .read-more {
    gap: 0.75rem;
  }

  /* Artworks Grid Section */
  .artworks-section {
    padding: 4rem 0;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 2rem;
  }

  .artworks-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .artwork-card {
    display: block;
    background-color: var(--color-surface);
    border-radius: 2px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(61, 79, 83, 0.08);
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .artwork-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(61, 79, 83, 0.15);
  }

  .card-image {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    background-color: var(--color-warm);
  }

  .artwork-thumbnail {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .card-overlay {
    position: absolute;
    inset: 0;
    background: rgba(61, 79, 83, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .view-artwork {
    color: white;
    font-size: 0.9375rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .artwork-card:hover .card-overlay {
    opacity: 1;
  }

  .artwork-card:hover .artwork-thumbnail {
    transform: scale(1.1);
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-meta {
    margin-bottom: 0.5rem;
  }

  .card-location {
    font-size: 0.875rem;
    color: var(--color-slate);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .card-artist {
    font-size: 0.9375rem;
    color: var(--color-secondary);
  }

  /* Footer */
  .homepage-footer {
    padding: 4rem 0 2rem;
    border-top: 1px solid var(--color-warm);
    margin-top: 4rem;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    text-align: center;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer-logo-img {
    height: 2.5rem;
    width: auto;
  }

  .footer-tagline {
    font-size: 1rem;
    font-style: italic;
    color: var(--color-slate);
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .social-link {
    color: var(--color-slate);
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .social-link:hover {
    color: var(--color-primary);
    transform: translateY(-2px);
  }

  .social-link svg {
    width: 24px;
    height: 24px;
  }

  /* Responsive */
  @media (min-width: 640px) {
    .artworks-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2.5rem;
    }
  }

  @media (min-width: 768px) {
    .hero-section {
      padding: 6rem 0 4rem;
    }

    .hero-title {
      font-size: 3.5rem;
    }

    .hero-description {
      font-size: 1.25rem;
    }

    .featured-content {
      padding: 3rem;
    }

    .featured-title {
      font-size: 2.5rem;
    }

    .featured-subtitle {
      font-size: 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .artworks-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>

<script>
  // Redirect first-time visitors to intro page
  if (typeof window !== 'undefined') {
    const hasVisitedIntro = localStorage.getItem('hasVisitedIntro');

    // If user hasn't visited intro page yet, redirect to /intro
    if (!hasVisitedIntro) {
      window.location.href = '/intro';
    }
  }
</script>
